.page-header
  %h1= @site.title

= map_canvas( @site, false )

%p
  = @site.description.html_safe

.btn-group
  - if can? :update, @site
    = link_to edit_site_path(@site), class: 'btn' do
      %i.icon-edit
      Edit
  - if can? :destroy, @site
    = link_to @site, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger' do
      %i.icon-trash.icon-white
      Delete
  = link_to sites_path, class: 'btn' do
    Back
